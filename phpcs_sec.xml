<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Simple AWS SES Security"
         xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">

    <description>WordPress Security Rules for Simple AWS SES</description>

    <!-- What to scan -->
    <file>./simple-aws-ses</file>
    
    <!-- Exclude vendor directories -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>

    <!-- Security-focused rules only -->
    <rule ref="WordPress.Security.EscapeOutput">
    </rule>
    <rule ref="WordPress.Security.SafeRedirect">
    </rule>
    <rule ref="WordPress.Security.NonceVerification">
    </rule>
    <rule ref="WordPress.Security.PluginMenuSlug">
    </rule>
    <rule ref="Squiz.PHP.Eval">
    </rule>
    <rule ref="WordPress.PHP.RestrictedPHPFunctions">
    </rule>
    <rule ref="WordPress.Security.ValidatedSanitizedInput">
    </rule>
</ruleset>